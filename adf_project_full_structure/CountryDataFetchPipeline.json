{
  "name": "CountryDataFetchPipeline",
  "properties": {
    "activities": [
      {
        "name": "ForEachCountry",
        "type": "ForEach",
        "typeProperties": {
          "items": [
            "india",
            "us",
            "uk",
            "china",
            "russia"
          ],
          "activities": [
            {
              "name": "GetCountryData",
              "type": "WebActivity",
              "typeProperties": {
                "url": "https://restcountries.com/v3.1/name/@{item()}",
                "method": "GET"
              }
            },
            {
              "name": "SaveCountryData",
              "type": "Copy",
              "typeProperties": {
                "source": {
                  "type": "RestSource"
                },
                "sink": {
                  "type": "AzureBlobSink",
                  "typeProperties": {
                    "fileName": "@{item()}.json"
                  }
                }
              }
            }
          ]
        }
      }
    ]
  }
}